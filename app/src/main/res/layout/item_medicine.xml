<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?selectableItemBackground"
	android:minHeight="72dp"
	android:orientation="horizontal"
	android:padding="16dp"
	tools:context=".screen.list.MedicinesListAdapter">

	<ImageView
		android:id="@+id/view_item_medicine_placeholder"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:background="#1A8E8E8E"
		app:srcCompat="@drawable/placeholder_medicine"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="16dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_item_medicine_trade_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAppearance="?textAppearanceBody1"
			android:textColor="?colorOnBackground"
			tools:text="@tools:sample/lorem/random"/>

		<TextView
			android:id="@+id/tv_item_medicine_manufacturer_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAppearance="?textAppearanceBody2"
			android:textColor="?colorOnBackground"
			android:textSize="12sp"
			tools:text="@tools:sample/lorem/random"/>
	</LinearLayout>
</LinearLayout>